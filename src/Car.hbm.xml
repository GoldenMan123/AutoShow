<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
		
<hibernate-mapping>	
	<class name="logic.Car" table="Cars">
		<id column="registration_number" name="reg_number" type="java.lang.Long">
			<generator class="increment"/>
		</id>
		<property column="cost" name="cost" type="java.math.BigDecimal"/>
		<property column="model" name="model" type="java.lang.String"/>
		
		<one-to-one name="specifications" class="logic.Specifications" cascade="all"/>
		
		<set name="clients_orders" table="Orders" lazy="false">
			<key column="car_id"/>
			<many-to-many column="client_id" class="logic.Client"/>
		</set>
		
		<set name="clients_testdrives" table="TestDrive" lazy="false">
			<key column="car_id"/>
			<many-to-many column="client_id" class="logic.Client"/>
		</set>
	</class>
</hibernate-mapping>